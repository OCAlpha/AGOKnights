<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <title>@Page.Message - Alpha Gamma Omega</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

</head>
    <body>
        <!--Header-->
        <div class="site-wrap">
            <div class="left-frame hidden-print">
                <div class="left-frame-header"></div>
                <div class="left-frame-column"></div>
            </div>
            <div class="right-frame hidden-print">
                <div class="right-frame-header"></div>
                <div class="right-frame-column"></div>
            </div>
            <div class="navbar navbar-inverse" role="navigation">
                <div class="top-frame hidden-print"></div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-home" title="Return to the Home Page">@Html.ActionLink(" ", "Index", "Home")</li>
                        <li class="nav-rush" title="What we're doing for recruiting!">@Html.ActionLink(" ", "Rush", "Home")</li>
                        <li class="nav-constitution" title="The full text of Alpha's consitution">@Html.ActionLink(" ", "Constitution", "Home")</li>
                        <li class="nav-officers" title="Current Officers of Alpha">@Html.ActionLink(" ", "Officers", "Home")</li>
                        <li class="nav-calendar" title="Upcoming Events">@Html.ActionLink(" ", "Calendar", "Home")</li>
                        <li class="nav-news" title="Periodic updates from the Secretary and President">@Html.ActionLink(" ", "Knews", "Home")</li>
                        <li class="nav-pictures" title="Pictures from our recent events">@Html.ActionLink(" ", "Pictures", "Home")</li>
                        <!--<li>
                        @{
                            //Html.Partial("_LoginPartial")
                        }
                    </li>-->
                    </ul>
                </div>
            </div>

            <!--Body-->
            <div class="container-fluid body">
                <!--Featured Section-->
                @RenderSection("featured", required: false)
                <!--Main Body-->
                @RenderBody()
                <!--End all body-->
            </div>
            <!--Footer-->
            <footer>
                <div class="hidden-xs hidden-print text-right">
                    <p>&copy; 2013-@DateTime.Now.Year - Alpha Gamma Omega</p>
                </div>
            </footer>
            <!--End Footer-->
        </div>
        @RenderSection("Scripts", required: false)
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <!-- Bootstrap core JavaScript
           ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>

        <!-- Randomize Background Image with jQuery-->
        <script type="text/javascript">
            $(document).ready(function () {
                var images = ['bg-001.jpg', 'bg-002.jpg', 'bg-003.jpg', 'bg-004.jpg', 'bg-005.jpg', 'bg-006.jpg', 'bg-007.jpg', 'bg-008.jpg'];
                $('html').css({ 'background-image': 'url(/Images/HomeBkg/' + images[Math.floor(Math.random() * images.length)] + ')' });
            });
        </script>

        <!-- Hide/Show Event Details in Event Banner -->
        <script type="text/javascript">
            $(document).ready(function () {
                var displayed = "hidden";

                if ($(window).width() >= 1200) {
                    $(".event-name").click(function () {
                        if (displayed == "hidden") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "72px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-down.png)");
                            });
                            displayed = "shown";
                        }

                        else if (displayed == "shown") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "-25px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-up.png)");
                            });
                            displayed = "hidden";
                        }
                    });
                }
                else if (($(window).width() >= 992) && ($(window).width() <= 1199)) {
                    $(".event-name").click(function () {
                        if (displayed == "hidden") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "61px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-down.png)");
                            });
                            displayed = "shown";
                        }

                        else if (displayed == "shown") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "-22px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-up.png)");
                            });
                            displayed = "hidden";
                        }
                    });
                }
                else if (($(window).width() >= 768) && ($(window).width() <= 991)) {
                    $(".event-name").click(function () {
                        if (displayed == "hidden") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "48px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-down.png)");
                            });
                            displayed = "shown";
                        }

                        else if (displayed == "shown") {
                            $(".event-details").slideToggle("medium");
                            $(".event-arrow").animate({
                                top: "-18px"
                            }, "medium", function () {
                                $(".event-arrow").css("background-image", "url(/Images/Site/arrow-up.png)");
                            });
                            displayed = "hidden";
                        }
                    });
                }
            });
        </script>
    </body>
</html>
