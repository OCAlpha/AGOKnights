@model IEnumerable<AGOKnights.Office>

@{
    ViewBag.Title = "Offices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OfficeBudgets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member.MemberId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization.Name)
        </th>
        <th></th>
    </tr>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OfficeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OfficeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OfficeId })
            </td>
        </tr>
    }
}

</table>
